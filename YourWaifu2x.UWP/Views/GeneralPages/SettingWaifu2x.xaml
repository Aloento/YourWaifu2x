<Page x:Class="YourWaifu2x.Views.GeneralPages.SettingWaifu2x"
	  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	  xmlns:android="http:/uno.ui/android"
      xmlns:local="using:YourWaifu2x"
	  xmlns:ios="http:/uno.ui/ios"
	  xmlns:wasm="http:/uno.ui/wasm"
      xmlns:xamarin="http:/uno.ui/xamarin"
      xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
      mc:Ignorable="d android ios wasm xamarin">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <local:ContentPageLayout Title="Setting Waifu2x"
                                 Description="Setting Waifu2x"
                                 Loaded="Setting_OnLoaded">
            <StackPanel>
                <muxc:InfoBar
                    IsOpen="True"
                    IsClosable="False"
                    Severity="Warning"
                    Title="Waifu2x Status"
                    Message="Loading...">
                    <muxc:InfoBar.ActionButton>
                        <Button Name="StatusButton"
                                Content="Waiting..."
                                IsEnabled="False"/>
                    </muxc:InfoBar.ActionButton>
                </muxc:InfoBar>
            </StackPanel>
        </local:ContentPageLayout>
    </Grid>
</Page>
